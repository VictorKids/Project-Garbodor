<%- include("partials/header.ejs") %>

<div>
    <form action="/publish" method="POST" class="newPostArea">
        <textarea rows="7" cols="60" name="newPost"></textarea>
        <input type="submit" value="Enter" class="enterBtn">
    </form>
</div>
<hr style="margin: 0; padding: 0;">
<div class="oldPostsArea">
    <% for(let i = curPosts.length -1; i >= 0; i--){ %>
        <div class="anOldPost">
            <img src="./messenger.png" class="msgIcon">
            <p><%= curPosts[i] %></p>
            <hr style="margin: 0; padding: 0;">
        </div>
   <% } %>
</div>

<%- include("partials/footer.ejs") %>
